---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import FeaturedMenu from '../components/FeaturedMenu.astro';
import AtmosphereSection from '../components/AtmosphereSection.astro';
import CTASection from '../components/CTASection.astro';
---

<Layout title="Home">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <Hero 
      title="Welcome to LaLa"
      subtitle="Auckland's cozy, artsy cafe in the heart of Parnell. Great coffee, delicious food, and live music on weekends."
    />

    <!-- Featured Menu Section -->
    <FeaturedMenu />

    <!-- Atmosphere / Our Space Section -->
    <AtmosphereSection />

    <!-- Testimonial / Quote Section -->
    <section class="py-16 bg-lala-cream">
      <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
          <svg class="w-12 h-12 text-lala-orange/30 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          <blockquote class="text-2xl md:text-3xl font-display text-lala-charcoal mb-6 leading-relaxed">
            A warm and inviting atmosphere with cozy, artsy vibes. 
            The quirky paintings and friendly staff make every visit special.
          </blockquote>
          <cite class="text-gray-500 not-italic">â€” Happy LaLa Regular</cite>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTASection />
  </main>

  <Footer />
</Layout>
