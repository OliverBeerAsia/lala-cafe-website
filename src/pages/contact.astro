---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact"
  description="Visit LaLa Cafe and Bar at Parnell Road, Auckland. Open 7am-9pm daily. Call +64 9 308 9337 or get directions to our cozy cafe."
>
  <Header />
  
  <main>
    <!-- Page Hero -->
    <section class="bg-lala-black py-20 relative overflow-hidden">
      <div class="absolute inset-0 opacity-20">
        <img 
          src="/images/hero-bg.jpeg"
          alt="LaLa Cafe entrance"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="absolute inset-0 bg-gradient-to-b from-lala-black via-lala-black/90 to-lala-black"></div>
      
      <div class="section-container relative z-10 text-center">
        <span class="text-lala-orange font-display font-semibold text-lg">Get in Touch</span>
        <h1 class="text-lala-offwhite mt-2 mb-6">Visit Us</h1>
        <p class="text-gray-400 text-xl max-w-2xl mx-auto">
          We'd love to see you! Drop by for a coffee, meal, or just to say hello.
        </p>
      </div>
    </section>

    <!-- Contact Info + Map Section -->
    <section class="py-16 bg-lala-cream">
      <div class="section-container">
        <div class="grid lg:grid-cols-2 gap-12">
          
          <!-- Contact Information -->
          <div>
            <h2 class="text-lala-charcoal mb-8">Find Us</h2>
            
            <div class="space-y-8">
              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-lala-orange/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lala-charcoal text-lg mb-1">Address</h3>
                  <address class="not-italic text-gray-600 leading-relaxed">
                    Parnell Road<br />
                    Parnell, Auckland 1052<br />
                    New Zealand
                  </address>
                  <a 
                    href="https://maps.google.com/?q=LaLa+Cafe+and+Bar+Parnell+Auckland" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-lala-orange hover:text-lala-gold transition-colors mt-2"
                  >
                    Get Directions
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-lala-orange/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lala-charcoal text-lg mb-1">Phone</h3>
                  <a 
                    href="tel:+6493089337" 
                    class="text-gray-600 hover:text-lala-orange transition-colors text-lg"
                  >
                    +64 9 308 9337
                  </a>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-lala-orange/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lala-charcoal text-lg mb-1">Opening Hours</h3>
                  <p class="text-gray-600">
                    <span class="font-medium">Monday - Sunday</span><br />
                    7:00 AM - 9:00 PM
                  </p>
                </div>
              </div>

              <!-- Social -->
              <div class="flex items-start gap-4">
                <div class="w-14 h-14 bg-lala-orange/10 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold text-lala-charcoal text-lg mb-3">Follow Us</h3>
                  <div class="flex gap-3">
                    <a 
                      href="https://www.facebook.com/lalacafebar/" 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="w-10 h-10 bg-lala-charcoal rounded-full flex items-center justify-center text-white transition-all duration-300 hover:bg-lala-orange hover:scale-110"
                      aria-label="Facebook"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/>
                      </svg>
                    </a>
                    <a 
                      href="https://www.instagram.com/lalacafebar/" 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="w-10 h-10 bg-lala-charcoal rounded-full flex items-center justify-center text-white transition-all duration-300 hover:bg-lala-orange hover:scale-110"
                      aria-label="Instagram"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.35.2-6.78,2.62-7,7C0,8.33,0,8.74,0,12s0,3.67.07,4.95c.2,4.36,2.62,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.35-.2,6.78-2.62,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.35-2.62-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Live Music Callout -->
            <div class="mt-10 p-6 bg-lala-black rounded-2xl">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-lala-orange rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-display font-semibold text-lala-orange text-lg">Live Music Weekends!</h4>
                  <p class="text-gray-400 text-sm">Join us every Saturday & Sunday for live music and great vibes.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Map -->
          <div class="rounded-2xl overflow-hidden shadow-xl h-[500px] lg:h-auto">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3192.8!2d174.78!3d-36.86!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2sParnell%20Road%2C%20Auckland!5e0!3m2!1sen!2snz!4v1234567890"
              width="100%" 
              height="100%" 
              style="border:0; min-height: 500px;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              title="LaLa Cafe Location Map"
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-16 bg-white">
      <div class="section-container">
        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-10">
            <span class="text-lala-orange font-display font-semibold text-lg">Questions?</span>
            <h2 class="text-lala-charcoal mt-2 mb-4">Send Us a Message</h2>
            <p class="text-gray-600">
              Have a question, feedback, or just want to say hi? We'd love to hear from you.
            </p>
          </div>

          <form 
            action="https://formspree.io/f/your-form-id" 
            method="POST"
            class="space-y-6"
          >
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="contact-name" class="block text-lala-charcoal font-medium mb-2">Your Name *</label>
                <input 
                  type="text" 
                  id="contact-name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 rounded-xl bg-lala-cream border border-gray-200 text-lala-charcoal placeholder-gray-400 focus:outline-none focus:border-lala-orange focus:ring-2 focus:ring-lala-orange/20 transition-all"
                  placeholder="John Smith"
                />
              </div>
              <div>
                <label for="contact-email" class="block text-lala-charcoal font-medium mb-2">Email Address *</label>
                <input 
                  type="email" 
                  id="contact-email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 rounded-xl bg-lala-cream border border-gray-200 text-lala-charcoal placeholder-gray-400 focus:outline-none focus:border-lala-orange focus:ring-2 focus:ring-lala-orange/20 transition-all"
                  placeholder="john@example.com"
                />
              </div>
            </div>

            <div>
              <label for="contact-subject" class="block text-lala-charcoal font-medium mb-2">Subject</label>
              <input 
                type="text" 
                id="contact-subject" 
                name="subject"
                class="w-full px-4 py-3 rounded-xl bg-lala-cream border border-gray-200 text-lala-charcoal placeholder-gray-400 focus:outline-none focus:border-lala-orange focus:ring-2 focus:ring-lala-orange/20 transition-all"
                placeholder="General inquiry"
              />
            </div>

            <div>
              <label for="contact-message" class="block text-lala-charcoal font-medium mb-2">Message *</label>
              <textarea 
                id="contact-message" 
                name="message" 
                required
                rows="5"
                class="w-full px-4 py-3 rounded-xl bg-lala-cream border border-gray-200 text-lala-charcoal placeholder-gray-400 focus:outline-none focus:border-lala-orange focus:ring-2 focus:ring-lala-orange/20 transition-all resize-none"
                placeholder="Your message..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full py-4 text-lg">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
