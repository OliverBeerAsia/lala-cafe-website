---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const cateringOptions = [
  {
    title: "Corporate Events",
    description: "Impress clients and energize your team with our professional catering for meetings, conferences, and office events.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>`
  },
  {
    title: "Private Functions",
    description: "Celebrate life's special moments with delicious food. Birthday parties, anniversaries, and family gatherings.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0A2.704 2.704 0 003 15.546V12a9 9 0 1118 0v3.546z"/>
    </svg>`
  },
  {
    title: "Breakfast & Brunch",
    description: "Start the day right with our popular breakfast platters, pastries, and specialty coffee service.",
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
    </svg>`
  }
];

const popularItems = [
  "Gourmet sandwich platters",
  "Fresh salad bowls",
  "Hot breakfast selections",
  "Pastry and cake displays",
  "Coffee service",
  "Beverages and refreshments"
];
---

<Layout 
  title="Catering"
  description="LaLa Cafe catering services for corporate events, private functions, and special occasions in Auckland. Contact us for custom menus."
>
  <Header />
  
  <main>
    <!-- Page Hero -->
    <section class="bg-lala-black py-20 relative overflow-hidden">
      <div class="absolute inset-0 opacity-20">
        <img 
          src="/images/food-3.jpg"
          alt="LaLa Cafe catering"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="absolute inset-0 bg-gradient-to-b from-lala-black via-lala-black/90 to-lala-black"></div>
      
      <div class="section-container relative z-10 text-center">
        <span class="text-lala-orange font-display font-semibold text-lg">Services</span>
        <h1 class="text-lala-offwhite mt-2 mb-6">Catering</h1>
        <p class="text-gray-400 text-xl max-w-2xl mx-auto">
          Bring the LaLa experience to your event. Delicious food, professional service, and that special touch.
        </p>
      </div>
    </section>

    <!-- Intro Section -->
    <section class="py-16 bg-lala-cream">
      <div class="section-container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-lala-charcoal mb-6">Bring LaLa to Your Event</h2>
          <p class="text-gray-600 text-lg leading-relaxed mb-8">
            Whether you're hosting a corporate meeting, celebrating a milestone, or planning 
            a special gathering, our catering brings the same quality and care you experience 
            at our cafe directly to your venue.
          </p>
          <p class="text-gray-600 text-lg leading-relaxed">
            We work with you to create custom menus that suit your event, dietary requirements, 
            and budget. From intimate gatherings to larger functions, we've got you covered.
          </p>
        </div>
      </div>
    </section>

    <!-- Catering Options -->
    <section class="py-16 bg-white">
      <div class="section-container">
        <div class="grid md:grid-cols-3 gap-8">
          {cateringOptions.map((option) => (
            <div class="p-8 bg-lala-cream rounded-2xl hover:shadow-lg transition-shadow duration-300">
              <div class="w-16 h-16 bg-lala-orange/10 rounded-2xl flex items-center justify-center text-lala-orange mb-6">
                <Fragment set:html={option.icon} />
              </div>
              <h3 class="text-xl font-display font-semibold text-lala-charcoal mb-3">
                {option.title}
              </h3>
              <p class="text-gray-600">
                {option.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Popular Items -->
    <section class="py-16 bg-lala-cream">
      <div class="section-container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <span class="text-lala-orange font-display font-semibold text-lg">What We Offer</span>
            <h2 class="text-lala-charcoal mt-2 mb-6">Popular Catering Items</h2>
            <ul class="space-y-4">
              {popularItems.map((item) => (
                <li class="flex items-center gap-3">
                  <div class="w-6 h-6 bg-lala-orange rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <span class="text-gray-700 text-lg">{item}</span>
                </li>
              ))}
            </ul>
            <p class="mt-8 text-gray-600">
              <strong>Custom menus available</strong> â€” Contact us to discuss your specific requirements 
              and we'll create a tailored menu for your event.
            </p>
          </div>
          <div class="rounded-2xl overflow-hidden shadow-xl">
            <img 
              src="/images/food-5.jpg"
              alt="LaLa Cafe catering platter"
              class="w-full h-96 object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Inquiry Form -->
    <section class="py-16 bg-lala-black" id="inquiry">
      <div class="section-container">
        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-10">
            <span class="text-lala-orange font-display font-semibold text-lg">Get Started</span>
            <h2 class="text-lala-offwhite mt-2 mb-4">Request a Quote</h2>
            <p class="text-gray-400">
              Tell us about your event and we'll get back to you with options and pricing.
            </p>
          </div>

          <form 
            action="https://formspree.io/f/your-form-id" 
            method="POST"
            class="space-y-6"
          >
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-lala-offwhite font-medium mb-2">Your Name *</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  required
                  class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite placeholder-gray-500 focus:outline-none focus:border-lala-orange transition-colors"
                  placeholder="John Smith"
                />
              </div>
              <div>
                <label for="email" class="block text-lala-offwhite font-medium mb-2">Email Address *</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite placeholder-gray-500 focus:outline-none focus:border-lala-orange transition-colors"
                  placeholder="john@example.com"
                />
              </div>
            </div>

            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="phone" class="block text-lala-offwhite font-medium mb-2">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite placeholder-gray-500 focus:outline-none focus:border-lala-orange transition-colors"
                  placeholder="+64 21 123 4567"
                />
              </div>
              <div>
                <label for="guests" class="block text-lala-offwhite font-medium mb-2">Number of Guests *</label>
                <input 
                  type="number" 
                  id="guests" 
                  name="guests" 
                  required
                  min="1"
                  class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite placeholder-gray-500 focus:outline-none focus:border-lala-orange transition-colors"
                  placeholder="25"
                />
              </div>
            </div>

            <div>
              <label for="event-type" class="block text-lala-offwhite font-medium mb-2">Event Type *</label>
              <select 
                id="event-type" 
                name="event-type" 
                required
                class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite focus:outline-none focus:border-lala-orange transition-colors"
              >
                <option value="">Select an option</option>
                <option value="corporate">Corporate Event</option>
                <option value="private">Private Function</option>
                <option value="breakfast">Breakfast/Brunch</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="date" class="block text-lala-offwhite font-medium mb-2">Event Date</label>
              <input 
                type="date" 
                id="date" 
                name="date"
                class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite focus:outline-none focus:border-lala-orange transition-colors"
              />
            </div>

            <div>
              <label for="message" class="block text-lala-offwhite font-medium mb-2">Tell Us About Your Event *</label>
              <textarea 
                id="message" 
                name="message" 
                required
                rows="4"
                class="w-full px-4 py-3 rounded-xl bg-lala-charcoal border border-gray-700 text-lala-offwhite placeholder-gray-500 focus:outline-none focus:border-lala-orange transition-colors resize-none"
                placeholder="Please include any dietary requirements, venue details, and what type of food you're interested in..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full py-4 text-lg">
              Send Inquiry
            </button>
          </form>

          <p class="text-center text-gray-500 text-sm mt-6">
            Or call us directly at <a href="tel:+6493089337" class="text-lala-orange hover:underline">+64 9 308 9337</a>
          </p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
