---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/menu", label: "Menu" },
  { href: "/about", label: "Our Space" },
  { href: "/catering", label: "Catering" },
  { href: "/contact", label: "Contact" },
];

const currentPath = Astro.url.pathname;
---

<!-- Skip to main content link for accessibility -->
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[60] focus:bg-lala-orange focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:outline-none">
  Skip to main content
</a>

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <div class="section-container">
    <nav class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <img 
          src="/images/lala-logo.png" 
          alt="LaLa Cafe and Bar" 
          class="h-16 md:h-20 w-auto transition-transform duration-300 group-hover:scale-105"
          width="200"
          height="80"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class={`font-display text-lg transition-colors duration-300 hover:text-lala-orange ${
              currentPath === link.href 
                ? 'text-lala-orange' 
                : 'text-lala-offwhite'
            }`}
          >
            {link.label}
          </a>
        ))}
        <a href="tel:+6493089337" class="btn-primary ml-4">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden p-2 text-lala-offwhite hover:text-lala-orange transition-colors"
        id="mobile-menu-btn"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden hidden bg-lala-black/98 backdrop-blur-md border-t border-lala-orange/20" id="mobile-menu">
    <div class="section-container py-6 flex flex-col gap-4">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class={`font-display text-xl py-2 transition-colors duration-300 hover:text-lala-orange ${
            currentPath === link.href 
              ? 'text-lala-orange' 
              : 'text-lala-offwhite'
          }`}
        >
          {link.label}
        </a>
      ))}
      <a href="tel:+6493089337" class="btn-primary mt-4 text-center inline-flex items-center justify-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        Call Us
      </a>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-20 md:h-24 bg-lala-black"></div>

<style>
  #main-header {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
  }

  #main-header.scrolled {
    background: rgba(10, 10, 10, 0.98);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
</style>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuBtn?.querySelector('.menu-icon');
  const closeIcon = menuBtn?.querySelector('.close-icon');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    const isExpanded = !mobileMenu?.classList.contains('hidden');
    menuBtn.setAttribute('aria-expanded', isExpanded ? 'true' : 'false');
  });

  // Header scroll effect
  const header = document.getElementById('main-header');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  });
</script>
