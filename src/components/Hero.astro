---
export interface Props {
  title?: string;
  subtitle?: string;
  showCTA?: boolean;
}

const { 
  title = "Welcome to LaLa",
  subtitle = "Auckland's cozy, artsy cafe in the heart of Parnell. Great coffee, delicious food, and live music on weekends.",
  showCTA = true
} = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center bg-lala-black overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img 
      src="/images/hero-bg.jpeg"
      alt="LaLa Cafe interior"
      class="w-full h-full object-cover opacity-70"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-lala-black/70 via-lala-black/40 to-transparent"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-lala-black/60 via-transparent to-transparent"></div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute top-20 right-10 w-64 h-64 bg-lala-orange/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 left-10 w-48 h-48 bg-lala-gold/10 rounded-full blur-3xl"></div>

  <!-- Content -->
  <div class="section-container relative z-10">
    <div class="max-w-3xl">
      <!-- Live Music Badge -->
      <div class="inline-flex items-center gap-2 bg-lala-orange/20 border border-lala-orange/40 rounded-full px-4 py-2 mb-8 animate-pulse">
        <svg class="w-5 h-5 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
        </svg>
        <span class="text-lala-orange font-display font-semibold text-sm">Live Music Sat & Sun!</span>
      </div>

      <!-- Title -->
      <h1 class="text-lala-offwhite mb-6 leading-tight">
        {title.split(' ').map((word, i) => (
          i === title.split(' ').length - 1 
            ? <span class="text-lala-orange">{word}</span>
            : <span>{word} </span>
        ))}
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-gray-300 mb-10 leading-relaxed max-w-2xl">
        {subtitle}
      </p>

      <!-- CTA Buttons -->
      {showCTA && (
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/contact" class="btn-primary text-lg px-8 py-4">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Visit Us
          </a>
          <a href="/menu" class="btn-secondary text-lg px-8 py-4">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            View Menu
          </a>
        </div>
      )}

      <!-- Quick Info -->
      <div class="mt-12 flex flex-wrap gap-6 text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>Open 7am - 9pm Daily</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          </svg>
          <span>Parnell, Auckland</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span>+64 9 308 9337</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-lala-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>
