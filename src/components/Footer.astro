---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: "/menu", label: "Menu" },
  { href: "/about", label: "Our Space" },
  { href: "/catering", label: "Catering" },
  { href: "/contact", label: "Contact" },
];

const hours = [
  { day: "Monday - Sunday", time: "7:00 AM - 9:00 PM" },
];
---

<footer class="bg-lala-black text-lala-offwhite">
  <!-- Main Footer Content -->
  <div class="section-container py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img 
            src="/images/lala-logo.png" 
            alt="LaLa Cafe and Bar" 
            class="h-16 w-auto"
          />
        </a>
        <p class="text-gray-400 mb-6 leading-relaxed">
          Auckland's cozy, artsy cafe in the heart of Parnell. 
          Great coffee, delicious food, and a warm atmosphere await.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          <a 
            href="https://www.facebook.com/lalacafebar/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-10 h-10 bg-lala-charcoal rounded-full flex items-center justify-center transition-all duration-300 hover:bg-lala-orange hover:scale-110"
            aria-label="Follow us on Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/>
            </svg>
          </a>
          <a 
            href="https://www.instagram.com/lalacafebar/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-10 h-10 bg-lala-charcoal rounded-full flex items-center justify-center transition-all duration-300 hover:bg-lala-orange hover:scale-110"
            aria-label="Follow us on Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12,2.16c3.2,0,3.58,0,4.85.07,3.25.15,4.77,1.69,4.92,4.92.06,1.27.07,1.65.07,4.85s0,3.58-.07,4.85c-.15,3.23-1.66,4.77-4.92,4.92-1.27.06-1.65.07-4.85.07s-3.58,0-4.85-.07c-3.26-.15-4.77-1.7-4.92-4.92-.06-1.27-.07-1.65-.07-4.85s0-3.58.07-4.85C2.38,3.92,3.9,2.38,7.15,2.23,8.42,2.18,8.8,2.16,12,2.16ZM12,0C8.74,0,8.33,0,7.05.07c-4.35.2-6.78,2.62-7,7C0,8.33,0,8.74,0,12s0,3.67.07,4.95c.2,4.36,2.62,6.78,7,7C8.33,24,8.74,24,12,24s3.67,0,4.95-.07c4.35-.2,6.78-2.62,7-7C24,15.67,24,15.26,24,12s0-3.67-.07-4.95c-.2-4.35-2.62-6.78-7-7C15.67,0,15.26,0,12,0Zm0,5.84A6.16,6.16,0,1,0,18.16,12,6.16,6.16,0,0,0,12,5.84ZM12,16a4,4,0,1,1,4-4A4,4,0,0,1,12,16ZM18.41,4.15a1.44,1.44,0,1,0,1.44,1.44A1.44,1.44,0,0,0,18.41,4.15Z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-display text-xl text-lala-orange mb-6">Quick Links</h4>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-lala-orange transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Opening Hours -->
      <div>
        <h4 class="font-display text-xl text-lala-orange mb-6">Opening Hours</h4>
        <ul class="space-y-3">
          {hours.map((item) => (
            <li class="text-gray-400">
              <span class="block font-medium text-lala-offwhite">{item.day}</span>
              <span>{item.time}</span>
            </li>
          ))}
        </ul>
        <div class="mt-6 p-4 bg-lala-charcoal rounded-xl">
          <p class="text-lala-orange font-display font-semibold flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
            </svg>
            Live Music Weekends!
          </p>
        </div>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-display text-xl text-lala-orange mb-6">Find Us</h4>
        <address class="not-italic space-y-4">
          <div class="flex items-start gap-3 text-gray-400">
            <svg class="w-5 h-5 mt-1 text-lala-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>
              Parnell Road<br />
              Parnell, Auckland<br />
              New Zealand
            </span>
          </div>
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-lala-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:+6493089337" class="text-gray-400 hover:text-lala-orange transition-colors">
              +64 9 308 9337
            </a>
          </div>
        </address>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-lala-charcoal">
    <div class="section-container py-6 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        © {currentYear} LaLa Cafe and Bar. All rights reserved.
      </p>
      <p class="text-gray-500 text-sm">
        Parnell's cozy corner since the beginning ☕
      </p>
    </div>
  </div>
</footer>
