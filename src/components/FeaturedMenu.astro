---
const featuredItems = [
  {
    name: "Big Breakfast",
    description: "Two eggs any style, sausages, bacon, mushrooms, hash browns, grilled tomato, and toast",
    price: "$26",
    category: "Breakfast",
    image: "/images/food-1.jpg"
  },
  {
    name: "Eggs Benedict",
    description: "Two eggs on Vienna sourdough with your choice of bacon, mushrooms, or smoked salmon",
    price: "$24",
    category: "Brunch",
    image: "/images/food-2.jpg"
  },
  {
    name: "LaLa Carbonara",
    description: "Chicken, garlic, mushrooms, bacon with white wine creamy sauce fettuccine",
    price: "$26",
    category: "Lunch",
    image: "/images/food-3.jpg"
  },
  {
    name: "Flat White",
    description: "Velvety smooth NZ classic - our specialty coffee served with love",
    price: "$5.50",
    category: "Coffee",
    image: "/images/food-4.jpg"
  }
];
---

<section class="py-20 bg-lala-cream">
  <div class="section-container">
    <!-- Section Header -->
    <div class="section-heading">
      <span class="text-lala-orange font-display font-semibold text-lg">Our Menu</span>
      <h2>Customer Favourites</h2>
      <p>From hearty breakfasts to satisfying lunches, discover what keeps our regulars coming back</p>
      <div class="heading-underline"></div>
    </div>

    <!-- Featured Items Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {featuredItems.map((item) => (
        <article class="card group">
          <div class="relative h-48 overflow-hidden">
            <img 
              src={item.image}
              alt={item.name}
              class="w-full h-full object-cover img-hover"
              loading="lazy"
              width="400"
              height="192"
            />
            <div class="absolute top-4 left-4">
              <span class="bg-lala-orange text-white text-xs font-display font-semibold px-3 py-1 rounded-full">
                {item.category}
              </span>
            </div>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-xl font-display font-semibold text-lala-charcoal group-hover:text-lala-orange transition-colors">
                {item.name}
              </h3>
              <span class="text-lala-orange font-display font-bold text-lg">
                {item.price}
              </span>
            </div>
            <p class="text-gray-600 text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
        </article>
      ))}
    </div>

    <!-- View Full Menu CTA -->
    <div class="text-center mt-12">
      <a href="/menu" class="btn-primary inline-flex items-center">
        <span>View Full Menu</span>
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
