---
import MenuCard from './MenuCard.astro';

export interface MenuItem {
  name: string;
  description: string;
  price: string;
}

export interface Props {
  id: string;
  name: string;
  description: string;
  items: MenuItem[];
}

const { id, name, description, items } = Astro.props;
---

<section id={id} class="scroll-mt-24">
  <div class="mb-8">
    <h3 class="text-lala-charcoal mb-2">{name}</h3>
    <p class="text-gray-600">{description}</p>
    <div class="w-16 h-1 bg-lala-orange rounded-full mt-4"></div>
  </div>
  
  <div class="grid gap-4 md:grid-cols-2">
    {items.map((item) => (
      <MenuCard 
        name={item.name} 
        description={item.description} 
        price={item.price} 
      />
    ))}
  </div>
</section>
