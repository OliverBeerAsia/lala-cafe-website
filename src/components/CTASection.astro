---
export interface Props {
  title?: string;
  subtitle?: string;
  primaryCTA?: { text: string; href: string };
  secondaryCTA?: { text: string; href: string };
}

const {
  title = "Ready to Visit?",
  subtitle = "Whether it's your morning coffee, a leisurely brunch, or dinner with friends â€” we're ready to welcome you.",
  primaryCTA = { text: "Get Directions", href: "/contact" },
  secondaryCTA = { text: "Call Us", href: "tel:+6493089337" }
} = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-lala-orange to-lala-gold relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-full h-full opacity-10">
    <div class="absolute top-10 left-10 w-32 h-32 border-4 border-white rounded-full"></div>
    <div class="absolute bottom-10 right-10 w-48 h-48 border-4 border-white rounded-full"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 border-4 border-white rounded-full"></div>
  </div>

  <div class="section-container relative z-10 text-center">
    <h2 class="text-white mb-6">{title}</h2>
    <p class="text-white/90 text-xl max-w-2xl mx-auto mb-10">
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href={primaryCTA.href} class="btn-dark text-lg px-8 py-4">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        {primaryCTA.text}
      </a>
      <a href={secondaryCTA.href} class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-display font-semibold rounded-full transition-all duration-300 hover:bg-white hover:text-lala-orange text-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        {secondaryCTA.text}
      </a>
    </div>

    <!-- Contact Info Cards -->
    <div class="mt-16 grid sm:grid-cols-3 gap-6 max-w-4xl mx-auto">
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-white">
        <svg class="w-8 h-8 mx-auto mb-3 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <h4 class="font-display font-semibold mb-1">Location</h4>
        <p class="text-sm opacity-90">Parnell Road, Auckland</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-white">
        <svg class="w-8 h-8 mx-auto mb-3 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h4 class="font-display font-semibold mb-1">Hours</h4>
        <p class="text-sm opacity-90">7:00 AM - 9:00 PM Daily</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-white">
        <svg class="w-8 h-8 mx-auto mb-3 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <h4 class="font-display font-semibold mb-1">Phone</h4>
        <p class="text-sm opacity-90">+64 9 308 9337</p>
      </div>
    </div>
  </div>
</section>
